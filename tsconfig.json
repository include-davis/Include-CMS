{
  "compilerOptions": {
    "target": "es2015",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@app/*": ["./app/*"],
      "@pages/*": ["./app/(pages)/*"],
      "@api/*": ["./app/(api)/*"],
      "@settings/*": ["./settings/*"],
      "@schema/*": ["./schema/*"],
      "@datatypes/*": ["./app/_types/*"],
      "@typeDefs/*": ["./app/_types/*"],
      "@globals/*": ["./app/(pages)/_globals/*"],
      "@components/*": ["./app/(pages)/_components/*"],
      "@pagedata/*": ["./app/(pages)/_data/*"],
      "@hooks/*": ["./app/(pages)/_hooks/*"],
      "@contexts/*": ["./app/(pages)/_contexts/*"],
      "@utils/*": ["./app/(api)/_utils/*"],   
      "@actions/*": ["./app/(api)/_actions/*"],
      "@apidata/*": ["./app/(api)/_data/*"],
      "@datalib/*": ["./app/(api)/_datalib/*"],
    }
  },
  "include": ["nextEnv.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"], 
  "exclude": ["node_modules"]
}